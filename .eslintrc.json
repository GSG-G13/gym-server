{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "error",
    "import/extensions": "off",
    "object-curly-newline": "off",
    "implicit-arrow-linebreak": "off",
    "linebreak-style": "off"
  },
  "ignorePatterns": [
    "**/__test__/*.ts"
  ]
}